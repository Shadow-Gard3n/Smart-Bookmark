{
  "manifest_version": 3,
  "name": "Smart Bookmark Assistant",
  "version": "1.0",
  "description": "Bookmark sites with optional AI tagging and summaries.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Smart Bookmarks"
  },
  "background": {
    "service_worker": "background.js"
  }
}